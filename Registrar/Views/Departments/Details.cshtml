@{
  Layout = "_Layout";
}

@using Registrar.Models
@model Registrar.Models.Department

<h2>Department Details</h2>
<hr />

<h3>@Html.DisplayNameFor(model => model.Name) : @Html.DisplayFor(model => model.Name) </h3>

@if(@Model.JoinEntities.Count == 0)

{
  <p> This Department does not have any students </p>
}
else
{
<h4>Students that belong to Department: </h4>
<ul>
@foreach(StudentDepartment join in Model.JoinEntities)
{
  <li>@join.Student.Name</li>
  @using(Html.BeginForm("DeleteJoin","Departments"))
  {
    @Html.Hidden("joingId", @join.StudentDepartmentId)
    <input type="submit" value="Delete"/>
  }
}
</ul>

}

<p>@Html.ActionLink("Back to list", "Index")</p>
<p>@Html.ActionLink("Add a Student", "AddStudent", new{ id = Model.DepartmentId })</p>
<p>@Html.ActionLink("Edit Department", "Edit", new{ id = Model.DepartmentId })</p>
<p>@Html.ActionLink("Delete Department", "Delete", new{ id = Model.DepartmentId })</p>


