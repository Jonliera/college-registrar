@{
  Layout="_Layout";
}

@model Registrar.Models.Department

<h2>Add a new Department</h2>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.LabelFor(model => model.Description)
  @Html.TextBoxFor(model => model.Description)

  <input type="submit" value="Add new department" class="btn btn-default"/>
}

<div>
  <div class="outside_side_bar">
    <div class="side_bar">
      <label>Epic Navi:</label>
      <br>
      <span>@Html.ActionLink("Show all Departments", "Index")</span>
      <br>
      <span>@Html.ActionLink("Home", "Index", "Home")</span>
    </div>
  </div>
</div>