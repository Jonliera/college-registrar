@{
  Layout="_Layout";
}

@using Registrar.Models;

<h1>Courses</h1>

@if (@Model.Count == 0)
{
  <h3>No Courses are added yet</h3>
}

<ul>
  @foreach(Course course in Model)
  {
    <li>@Html.ActionLink($"{course.Name}", "Details", new { id = course.CourseId })</li>
  }
</ul>

<p>@Html.ActionLink("Add Course", "Create")</p>
<p>@Html.ActionLink("Add Student", "Create", "Students")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>