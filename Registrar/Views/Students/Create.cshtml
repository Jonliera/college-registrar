@{
  Layout="_Layout";
}

@model Registrar.Models.Student

<h2>Add Student</h2>

<p>@Html.ValidationMessageFor(model => model.CourseId, "", new { @class = "text-danger", @style = "font-weight: 600;"})</p>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.LabelFor(model => model.EnrollDate)
  @Html.TextBoxFor(model => model.EnrollDate)

  @Html.LabelFor(model => Model.Course)
  @Html.DropDownList("CourseId")

  <input type="submit" value="Add new student" class="btn btn-default"/>
}

<div>
  <div class="outside_side_bar">
    <div class="side_bar">
      <header>Epic Navi:</header>
      <br>
      <span>@Html.ActionLink("Show all Students", "Index")</span>
      <br>
      <span>@Html.ActionLink("Home", "Index", "Home")</span>
    </div>
  </div>
</div>
<br>